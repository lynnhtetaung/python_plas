<!DOCTYPE html>
<html>

<head>
    <link rel="stylesheet" href="../../css/skyblue.css">
    <link rel="stylesheet" href="../../css/spinner.css">
    <link rel="stylesheet" href="../../stylesheets/app.css">
    <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/codemirror/lib/codemirror.css">
    <link rel="stylesheet" href="/codemirror/theme/neat.css">
    <link rel="stylesheet" href="/codemirror/theme/darcula.css">
    <link rel="stylesheet" href="/codemirror/theme/eclipse.css">
    <link rel="stylesheet" href="/codemirror/theme/dracula.css">
    <title>CWP</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        /* Create two equal columns that floats next to each other */
        .column {
            float: left;
            width: 50%;
        }

        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }

        #btn {
            font-size: 20px;
        }

        .CodeMirror {
            border: 1px solid #eee;
            height: 600px;
        }
    </style>

    <script type="text/javascript" src="/codemirror/lib/codemirror.js"></script>
    <script type="text/javascript" src="/codemirror/mode/clike/clike.js"></script>
    <script type="text/javascript" src="/codemirror/addon/edit/closebrackets.js"></script>

</head>

<body>

    <div class="bg-dark mb-3">
        <input type="button" id="next" value="Next" onclick="onRouteChange('Next')"
            class="float-right mt-4 mr-5 btn btn-danger" />
        <input type="button" id="prev" value="Prev" onclick="onRouteChange('Prev')"
            class="float-left mt-4 ml-5 btn btn-danger" />
        <div class="container text-center">
            <a href="javascript:onclick=goBackToProblemList()" style="text-decoration: none">
                <h1 class="mt-3 mb-3 text-white">
                    <%= title %>
                </h1>
            </a>
        </div>
    </div>

    <div class="form-group">
        <div class="row ml-5 mr-5">
            <div class="col-10">
                <div class="input-group w-25 mb-3">
                    <div class="input-group-prepend">
                        <label class="input-group-text" for="inputGroupSelect01">Theme: </label>
                    </div><select class="custom-select" onchange="selectTheme()" id=select>
                        <option selected>neat</option>
                        <option>darcula</option>
                        <option>eclipse</option>
                        <option>dracula</option>
                    </select>
                </div>
            </div>
            <div class="col-2">
                <input type="submit" id="btn-submit" value="Submit" onclick="onSubmit()"
                    class="float-right mr-3 btn btn-primary" />
            </div>                
                       
            
<script>
function myFunction(){
    alert ("hello");
    document.write(5+6);  
};   
</script>
                    
        </div>
    </div>

    <div class="row ml-5 mr-5 bg-dark border border-warning">
        <div class="col-6 pt-3 pb-3">
            <h2 class="text-center mb-3">Source Code</h2>
            <textarea id="sourceCode" name="sourceCode"><%= p1Source %></textarea>
        </div>

        <div class="col-6 pt-3 pb-3">
            <h2 class="text-center mb-3">Test Code</h2>
            <textarea id="testCode" name="testCode" readonly><%= p1Test %></textarea>
        </div>
    </div>
    </br>

    <input type="hidden" id="resultField" value="<%= resultField %>" />
    <input type="hidden" id="totalProblems" value="<%= totalProblems %>" />

    <div id="result-table" class="row ml-5 mr-5">
        <div class="col">
            <table id="submit-result" class="table table-bordered table-hover">
                <tbody>
                    <tr>
                        <th colspan="2" align="left"><textarea rows="7" id="submit-result-value"
                                class="form-control bg-dark text-white" readonly="true"><%= resultField %></textarea>
                        </th>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div hidden id="spinner"></div>

</body>

<script type="text/javascript" src="/javascripts/programming.python.js"></script>
<!-- <script type="text/javascript" src="/javascripts/programming.java.js"></script> -->


</html>